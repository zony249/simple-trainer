    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach", 
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "172.26.93.30",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}", 
                    "remoteRoot": "/home/zonglin1/projects/aip-lilimou/zonglin1/simple-trainer" 
                }
            ], 
            "justMyCode": false
        }, 
        {
            "name": "simple-trainer.compress_utils",
            "type": "debugpy",
            "request": "launch",
            "module": "simple-trainer.compress_utils", 
            "env" : {
                "CUDA_VISIBLE_DEVICES": "0,1"
            },
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "wikitext",
            "type": "debugpy",
            "request": "launch",
            "module": "simple-trainer.tasks.wikitext",
            "console": "integratedTerminal",
        },
        {
            "name": "alpaca_plus",
            "type": "debugpy",
            "request": "launch",
            "module": "simple-trainer.tasks.alpaca_plus",
            "console": "integratedTerminal",
        },
        {
            "name": "trainer",
            "type": "debugpy",
            "request": "launch",
            "module": "simple-trainer.trainer",
            "console": "integratedTerminal",
        },
        {
            "name": "simple-trainer/__main__",
            "type": "debugpy",
            "request": "launch",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0,1"
            },
            "module": "accelerate.commands.launch",
            "args": [
                "--num_processes=2",
                "-m",
                "simple-trainer",
                "--hf_name_or_path=Qwen/Qwen3-0.6B",
                "--task=alpaca_plus",
                "--lora_adapter=random_init",
                "--batch_size=1",
                "--lr=1e-3",
                "--epochs=10",
                "--gradient_accumulation_steps=2"
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "cllama",
            "type": "debugpy",
            "request": "launch",
            "module": "simple-trainer.models.cllama",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
            "console": "integratedTerminal",
        }
    ]
